<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.example.mehrkala.model.Item"
            />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{item.name}"
        android:fontFamily="@font/text_font"
        android:textColor="@color/overlay_dark_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_receipt_count"
        />
    <TextView
        android:id="@+id/row_receipt_count"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:text="@{String.valueOf(item.countItem)}"
        android:textColor="@color/overlay_dark_80"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_40"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>