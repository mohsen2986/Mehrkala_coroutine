<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="com.example.mehrkalacoroutine.data.database.model.UserInformation"
            />
    </data>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_50"
    tools:context=".ui.fragment.account"
    android:fillViewport="true"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_A400"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/circle_drawable"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="-120dp"
            android:alpha="0.2"
            />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:rotation="-30"
            android:alpha=".2"
            android:src="@drawable/rectangle_drawable"
            />
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:text="حساب کاربری"
            android:fontFamily="@font/font_one"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:lineSpacingExtra="-10dp"
            />
        <Button
            android:id="@+id/fra_account_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_arrow_left_black"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"

            />
        <Button
            android:id="@+id/fra_account_logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/logout_ic"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/fra_account_logout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خروج از حساب کاربری"
            android:textColor="@color/white"
            android:fontFamily="@font/text_font"
            android:textSize="15dp"
            android:layout_marginEnd="57dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:layout_below="@id/header"
            android:layout_alignParentBottom="true"
            android:background="@drawable/one_corner_rectangle_drawable"
            >
            <!--                username  -->
            <LinearLayout
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_gravity="center"
                    android:text="@string/username"
                    android:fontFamily="@font/font_one"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/ic_person_black_24dp"/>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:id="@+id/username_layout"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomStart="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username">
                <com.google.android.material.textfield.TextInputEditText
                    android:text="@{user.username}"
                    android:id="@+id/fra_account_username"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--            phoneNumber  -->
            <LinearLayout
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username_layout">
                <TextView
                    android:layout_gravity="center"
                    android:text="@string/phone_number"
                    android:fontFamily="@font/font_one"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"/>
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/ic_phone"/>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomStart="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_number">
                <com.google.android.material.textfield.TextInputEditText
                    android:text="@{user.phone}"
                    android:id="@+id/fra_account_phone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_number_layout">
                <TextView
                    android:layout_gravity="center"
                    android:text="ایمیل"
                    android:fontFamily="@font/font_one"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"/>
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/ic_email"
                    />

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_email_layout"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:boxCornerRadiusBottomStart="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fra_account_email"
                    android:text="@{user.email}"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <!--            password  -->
            <LinearLayout
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_email_layout">
                <TextView
                    android:layout_gravity="center"
                    android:text="@string/password"
                    android:fontFamily="@font/font_one"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"/>
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/ic_password"/>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_layout"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:boxBackgroundMode="filled"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:text="@{user.password}"
                    android:id="@+id/fra_account_password"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.rey.material.widget.Button
                android:id="@+id/fra_account_save_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/account_btn_background"
                android:text="ذخیره اطلاعات"
                android:textSize="@dimen/register_text_size"
                android:fontFamily="@font/app_font"
                android:textColor="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="4dp"
                app:rd_enable="true"
                app:rd_rippleColor="#aaaa"
                app:rd_rippleType="wave"
                app:rd_maxRippleRadius="24dp"
                app:rd_rippleAnimDuration="700"
                app:rd_maskType="rectangle"
                app:rd_cornerRadius="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@id/password_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fra_account_orders_history"
                />


            <Button
                android:id="@+id/fra_account_orders_history"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_margin="7dp"
                android:text="تاریخچه سفارشات"
                android:fontFamily="@font/text_font"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@color/red_400"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>


</androidx.core.widget.NestedScrollView>
</layout>