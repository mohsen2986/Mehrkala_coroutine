<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
        name="receipt"
        type="com.example.mehrkalacoroutine.data.network.model.Receipt" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.sendBillsBasket.SendBillsBasketFragment"
        android:layoutDirection="ltr"
        android:fitsSystemWindows="true"
        >
        <FrameLayout
            android:id="@+id/fra_send_bills_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_light_70"
            android:alpha="0.9"
            android:elevation="7dp"
            >
            <ProgressBar
                android:id="@+id/fra_send_bills_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/fra_send_bills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ارسال کالا"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:textSize="22dp"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/fra_send_bills_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:background="@color/grey_40"
            android:backgroundTint="@color/grey_10"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_title"
            >
            <com.rey.material.widget.FrameLayout
                android:id="@+id/fra_send_bills_info"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مشخصات دریافت کننده"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    android:layout_gravity="center_horizontal"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location"
                    android:layout_gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ادرس:"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    android:layout_gravity="end"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="35dp"
                    />
                <FrameLayout
                    android:id="@+id/fra_send_bills_choose_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="82dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_background"
                    android:layout_marginStart="7dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_expand_more"
                        />
                    <TextView
                        android:id="@+id/fra_send_bills_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_gravity="center_vertical"
                        android:text="شهر"
                        android:paddingEnd="7dp"
                        android:fontFamily="@font/text_font"
                        android:textColor="@color/overlay_dark_80"
                        />
                </FrameLayout>
                <ImageView
                    android:id="@+id/fra_send_bills_add_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_plus"
                    android:layout_gravity="end"
                    android:layout_marginTop="69dp"
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:id="@+id/fra_send_bills_add_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن ادرس"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    android:layout_gravity="end"
                    android:layout_marginTop="66dp"
                    android:layout_marginEnd="35dp"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/red_400"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مشخصات دریافت کننده"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="110dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="7dp"
                    android:layout_gravity="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="143dp"
                    android:layout_marginEnd="35dp"
                    android:layout_gravity="end"
                    android:text="نام:"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    />
                <FrameLayout
                    android:id="@+id/fra_send_bills_choose_reciver"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="143dp"
                    android:layout_marginEnd="82dp"
                    android:background="@drawable/round_background"
                    android:layout_marginStart="7dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_expand_more"
                        />
                    <TextView
                        android:id="@+id/fra_send_bills_reciver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_gravity="center_vertical"
                        android:text="دریافت کننده"
                        android:paddingEnd="7dp"
                        android:fontFamily="@font/text_font"
                        android:textColor="@color/overlay_dark_80"
                        />
                </FrameLayout>
                <ImageView
                    android:id="@+id/fra_send_bills_add_reciver_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_plus"
                    android:layout_gravity="end"
                    android:layout_marginTop='178dp'
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:id="@+id/fra_send_bills_add_reciver_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن مشخصات"
                    android:layout_gravity="end"
                    android:layout_marginTop="178dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/text_font"
                    android:textColor="@color/overlay_dark_80"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارسال کالا به صورت :"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="210dp"
                    android:layout_gravity="end"
                    android:textColor="@color/overlay_dark_80"
                    android:fontFamily="@font/text_font"
                    />
                <FrameLayout
                    android:id="@+id/fra_send_bills_choose_packet_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="162dp"
                    android:background="@drawable/round_background"
                    android:layout_marginStart="7dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_expand_more"
                        />
                    <TextView
                        android:id="@+id/fra_send_bills_packet_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_gravity="center_vertical"
                        android:text="دریافت کننده"
                        android:paddingEnd="7dp"
                        android:fontFamily="@font/text_font"
                        android:textColor="@color/overlay_dark_80"
                        />
                </FrameLayout>

            </com.rey.material.widget.FrameLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/fra_send_bills_receipt_title"
            android:text="صورت حساب نهایی"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_info_card"
            />
        <TextView
            android:id="@+id/fra_send_bills_costs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مجموع خرید :"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/text_font"
            android:textColor="@color/overlay_dark_80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_receipt_title"
            />
        <TextView
            android:id="@+id/fra_send_bills_costs_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{receipt.receipt.receipt , default = '0'}"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_receipt_title"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/view_gradient"
            android:layout_marginTop="7dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_receipt_title"
            />
        <TextView
            android:id="@+id/fra_send_bills_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تخفیف :"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_costs"
            />
        <TextView
            android:id="@+id/fra_send_bills_offer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ receipt != null ? '-' + receipt.receipt.offer : String.valueOf(0)}"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/overlay_dark_90"
            android:fontFamily="@font/text_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_costs"
            />
        <TextView
            android:id="@+id/fra_send_bills_post_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="هزینه ارسال :"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_offer"
            />
        <TextView
            android:id="@+id/fra_send_bills_post_cost_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{receipt.receipt.postCost , default = '0'}"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_offer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مالیات :"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_post_cost"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{receipt.receipt.tax}"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_post_cost"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/red_400"
            android:layout_marginTop="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_post_cost"
            />
        <TextView
            android:id="@+id/fra_send_bills_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مجموع نهایی با اعمال تخفیف :"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_post_cost"
            />
        <TextView
            android:id="@+id/fra_send_bills_total_cost_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{receipt.receipt.totalCost , default = '0'}"
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/text_font"
            android:layout_marginTop="37dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_send_bills_post_cost"
            />
        <Button
            android:id="@+id/fra_send_bills_buy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_margin="7dp"
            android:text="تایید و پرداخت حساب"
            android:fontFamily="@font/text_font"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@color/red_400"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>