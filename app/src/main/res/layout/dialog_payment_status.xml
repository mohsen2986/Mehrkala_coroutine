<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_5"
    >
    <FrameLayout
        android:id="@+id/dialog_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amber_500"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/payment_success"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کد پیگیری:"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/app_font_bold"
            android:layout_marginTop="44dp"
            android:layout_marginStart="45dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/dialog_ref_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="123123123"
            android:textColor="@color/white"
            android:fontFamily="@font/app_font_bold"
            android:layout_gravity="bottom"
            android:layout_marginStart="39dp"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_img"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_show_receipt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_rounded_green"
        android:text="مشاهده رسید"
        android:fontFamily="@font/text_font"
        android:textSize="19dp"
        android:textColor="@color/white"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_download_receipt"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="دانلود رسید"
            android:fontFamily="@font/text_font"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_rounded_green"
            android:backgroundTint="@color/cyan_400"
            />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_exit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_rounded_red"
        android:text="خروج"
        android:fontFamily="@font/text_font"
        android:textSize="20dp"
        android:textColor="@color/white"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>