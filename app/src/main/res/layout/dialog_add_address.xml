<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical">
        <EditText
            android:id="@+id/dialog_add_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="ادرس خود را اینجا وارد کنید...."
            android:fontFamily="@font/text_font"
            android:textColor="@color/overlay_dark_80"
            android:padding="15dp"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_add_address_post_number"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_600"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_address"
        />
        <EditText
            android:id="@+id/dialog_add_address_post_number"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:hint="شماره بستی"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@id/dialog_add_address_submit"
            android:autofillHints="۰۹۳۶۰۳۳۲۹۸۶" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_add_address_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ثبت ادرس"
        android:fontFamily="@font/text_font"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_rounded_red"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

