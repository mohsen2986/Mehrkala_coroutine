<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="category"
            type="com.example.mehrkalacoroutine.data.network.model.CategoryImage"
            />
        <variable
            name="onClick"
            type="com.example.mehrkalacoroutine.ui.utils.OnClickHandler"
            />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingEnd="@dimen/spacing_medium"
        android:paddingStart="@dimen/spacing_medium"
        android:layoutDirection="ltr"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:onClick="@{(V) -> onClick.onClick(category)}"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/row_boarder_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:loadImage="@{category.img}"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{category.categoty}"
                android:fontFamily="@font/lalezar"
                android:layout_marginTop="4dp"
                android:textColor="@color/overlay_dark_70"
                android:textSize="17dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>