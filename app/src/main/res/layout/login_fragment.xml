<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.splashScreen.login.LoginFragment"
    android:layoutDirection="ltr"
    android:fitsSystemWindows="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/ac_login_txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:fontFamily="@font/font_one"
            android:textSize="@dimen/register_text_size"
            android:gravity="end"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.24"
            />

        <EditText
            android:id="@+id/ac_login_edt_username"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_form_edit_txt_background"
            android:inputType="textAutoComplete"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ac_login_txt_username"
            app:layout_constraintStart_toStartOf="@+id/ac_login_txt_username"
            app:layout_constraintTop_toBottomOf="@id/ac_login_txt_username"
            />
        <TextView
            android:id="@+id/ac_login_txt_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textDirection="ltr"
            android:textSize="@dimen/register_text_size"
            android:fontFamily="@font/font_one"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ac_login_edt_username"
            app:layout_constraintStart_toStartOf="@+id/ac_login_txt_username"
            app:layout_constraintEnd_toEndOf="@id/ac_login_txt_username"
            />
        <EditText
            android:id="@+id/ac_login_edt_password"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/login_form_edit_txt_background"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:inputType="numberPassword"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/ac_login_txt_password"
            app:layout_constraintStart_toStartOf="@+id/ac_login_txt_username"
            app:layout_constraintEnd_toEndOf="@id/ac_login_txt_username"
            />

        <com.rey.material.widget.Button
            android:id="@+id/ac_login_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/login_btn_background"
            android:text="@string/login"
            android:textSize="@dimen/register_text_size"
            android:fontFamily="@font/font_five"
            android:textColor="@color/white"
            app:rd_enable="true"
            app:rd_rippleColor="#aaaa"
            app:rd_rippleType="wave"
            app:rd_maxRippleRadius="24dp"
            app:rd_rippleAnimDuration="700"
            app:rd_maskType="rectangle"
            app:rd_cornerRadius="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/ac_login_edt_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ac_login_show_status"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ac_login_edt_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>