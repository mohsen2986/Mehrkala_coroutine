<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_5"
    >
    <FrameLayout
        android:id="@+id/dialog_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_500"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_payment_fail"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پرداخت ناموفق"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/app_font_bold"
            android:layout_gravity="bottom |center"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_img"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مشتری گرامی به علت مشکل در پداخت عملیات ناموفق میباشد."
            android:textColor="@color/overlay_dark_80"
            android:fontFamily="@font/app_font_bold"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="29dp"
            android:textAlignment="center"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_exit"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_rounded_red"
            android:text="خروج"
            android:fontFamily="@font/text_font"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center |bottom"
            android:layout_marginBottom="13dp"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>